<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="2dp">


    <ImageView
        android:id="@+id/investments_coin_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/investments_coin_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="Symbol"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/investments_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/investments_coin_symbol"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="Coin name" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/investments_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="Name invest"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/investments_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/investments_name_item"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="100 000" />

            <TextView
                android:visibility="gone"
                android:id="@+id/investments_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/investments_amount"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:text="profit"/>

            <TextView
                android:id="@+id/investments_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:textSize="14sp"
                tools:text="2 d" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>