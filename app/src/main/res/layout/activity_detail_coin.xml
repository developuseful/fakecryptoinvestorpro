<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddInvestActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/detail_coin_name777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:text="Bitcoin"
        android:textSize="18dp"/>

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/detail_coin_img777"
        android:layout_width="65dp"
        android:layout_height="65dp" />

    <TextView
        android:id="@+id/detail_coin_price777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42 178$"
        android:textSize="18dp" />

    <LinearLayout
        android:paddingTop="16dp"
        android:id="@+id/llDate777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_coin_price777">

        <TextView
            android:id="@+id/detail_coin_label_date777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата:" />

        <TextView
            android:id="@+id/detail_coin_date_text_view777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   26.09.2021" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/llName777"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/detail_coin_label_name_invest777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название инвестиции" />


        <EditText
            android:inputType="text"
            android:id="@+id/detail_coin_name_invest777"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:id="@+id/llAmount777"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/detail_coin_label_amount_invest777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сумма инвестиции:" />


        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/detail_coin_amount_invest777"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_add_invest777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инвестировать"/>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16sp"
            android:src="@drawable/ic_baseline_add_24" />



    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>